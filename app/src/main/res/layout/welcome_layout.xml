<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomeActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="324dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/logofood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/muli_black"
        android:text="Quản Lý Quán Ăn"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_black"
        android:text="Pixel's Food"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/muli"
        android:text="Món ăn ngon là hạnh phúc của mọi người"
        android:textColor="#800029" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#D594AA"
            android:onClick="callLoginFromWel"
            android:text="@string/login"
            android:textColor="@color/white"
            android:transitionName="transition_login"
            app:backgroundTint="#EA004F"

            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#E6A2B9"
            android:onClick="callSignUpFromWel"
            android:text="@string/register"
            android:textColor="@color/white"
            android:transitionName="transition_signup"
            app:backgroundTint="#EF0051" />

    </LinearLayout>

</LinearLayout>
